import forge.log as log;
import forge.flutter as flutter;

fun apex() {
    log.info("=== Flutter Phase 4 Test ===");
    
    // Test Flutter app initialization
    log.info("Initializing Flutter app...");
    flutter.run_app("MyApp");
    
    // Test basic widgets
    log.info("Creating Text widget...");
    let text = flutter.text("Hello Flutter!");
    log.info("Text widget: " + text);
    
    log.info("Creating Button widget...");
    let button = flutter.button("Click Me");
    log.info("Button widget: " + button);
    
    log.info("Creating AppBar widget...");
    let appbar = flutter.appbar("My App");
    log.info("AppBar widget: " + appbar);
    
    log.info("Creating Column widget...");
    let column = flutter.column([]);
    log.info("Column widget: " + column);
    
    log.info("Creating Row widget...");
    let row = flutter.row([]);
    log.info("Row widget: " + row);
    
    log.info("Creating Scaffold widget...");
    let scaffold = flutter.scaffold();
    log.info("Scaffold widget: " + scaffold);
    
    log.info("Creating Center widget...");
    let center = flutter.center();
    log.info("Center widget: " + center);
    
    log.info("Creating Container widget...");
    let container = flutter.container();
    log.info("Container widget: " + container);
    
    log.info("=== Flutter test completed ===");
}
