import forge.log as log;

struct User { name:: str, age:: i32 }

impl User {
    fun greet(self:: User) -> str { return self.name; }
}

fun birthday(u:: User) -> User {
    // simple struct update via re-assignment
    let older = User { name: u.name, age: u.age + 1 };
    return older;
}

fun apex() {
    let u = User { name: "Lena", age: 20 };
    log.info(u.greet());
    let older = birthday(u);
    log.info("age now", older.age);
}
