import forge;
import forge.ui as ui;

fun apex() {
    ui.run_app(MyApp {});
}

struct MyApp {}

impl ui::App for MyApp {
    fun build(ctx:: ui::Context) -> ui::Widget {
        let title  = ctx.text("Hello NightScript UI");
        let button = ctx.button("Click Me");

        let root = ctx.column([title, button]);
        return root;
    }
}
