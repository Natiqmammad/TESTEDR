{
    "name": "@afns/react-renderer",
    "version": "0.1.0",
    "description": "ApexForge NightScript React Renderer - renders AFNS widget trees",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "esbuild src/index.tsx --bundle --format=esm --outfile=dist/afns_renderer.js --sourcemap --external:react --external:react-dom",
        "build:prod": "esbuild src/index.tsx --bundle --format=esm --outfile=dist/afns_renderer.js --minify --external:react --external:react-dom",
        "typecheck": "tsc --noEmit"
    },
    "files": [
        "dist",
        "src"
    ],
    "peerDependencies": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "esbuild": "^0.20.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "typescript": "^5.3.0"
    },
    "keywords": [
        "afns",
        "nightscript",
        "react",
        "renderer"
    ],
    "license": "MIT"
}