{
  "name": "apexforge-nightscript",
  "displayName": "ApexForge NightScript",
  "description": "Complete ApexForge NightScript (AFNS) experience: syntax highlighting, snippets, completions, and tooling hooks for apexrc projects.",
  "version": "0.1.0",
  "publisher": "afns",
  "author": "Natiq Mammadov (ApexForge) <https://github.com/Natiqmammad>",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "main": "./extension.js",
  "scripts": {
    "compile": "node ./node_modules/vscode/bin/compile",
    "watch": "node ./node_modules/vscode/bin/compile -watch"
  },
  "activationEvents": [
    "onLanguage:afml",
    "onCommand:apexforge.runApexrcCheck"
  ],
  "contributes": {
    "languages": [
      {
        "id": "afml",
        "aliases": [
          "ApexForge NightScript",
          "AFNS"
        ],
        "extensions": [
          ".afml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "afml",
        "scopeName": "source.afml",
        "path": "./syntaxes/nightScript.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "afml",
        "path": "./snippets/nightScript.json"
      }
    ],
    "commands": [
      {
        "command": "apexforge.runApexrcCheck",
        "title": "ApexForge: Run apexrc check",
        "category": "ApexForge"
      }
    ],
    "iconThemes": [
      {
        "id": "apexforge-icons",
        "label": "ApexForge Icons",
        "path": "./fileicons/icon-theme.json"
      }
    ],
    "configurationDefaults": {
      "[afml]": {
        "editor.defaultFormatter": "afns.afml-formatter",
        "editor.autoClosingBrackets": "always",
        "editor.autoIndent": "advanced"
      }
    },
    "configuration": {
      "title": "ApexForge NightScript",
      "properties": {
        "apexforge.apexrcPath": {
          "type": "string",
          "default": "apexrc",
          "description": "Path to the apexrc executable used for diagnostics."
        },
        "apexforge.apexrcCheckArgs": {
          "type": "array",
          "default": [
            "check"
          ],
          "items": {
            "type": "string"
          },
          "description": "Arguments passed to apexrc when running background diagnostics."
        }
      }
    }
  },
  "keywords": [
    "apexforge",
    "nightscript",
    "afml",
    "async",
    "react",
    "scene",
    "apexrc"
  ],
  "devDependencies": {
    "@vscode/vsce": "^3.7.1"
  }
}
